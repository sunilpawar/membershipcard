<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Membershipcard</base>
  <class>MembershipCard</class>
  <name>civicrm_membership_card</name>
  <comment>FIXME</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique MembershipCard ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>membership_id</name>
    <type>int unsigned</type>
    <comment>FK to civicrm_membership</comment>
  </field>
  <foreignKey>
    <name>membership_id</name>
    <table>civicrm_membership</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>template_id</name>
    <type>int unsigned</type>
    <comment>FK to civicrm_membership_card_template</comment>
  </field>
  <foreignKey>
    <name>template_id</name>
    <table>civicrm_membership_card_template</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>card_data</name>
    <title>Card Data</title>
    <comment>Generated card data</comment>
    <type>longtext</type>
    <required>false</required>
    <export>true</export>
    <import>true</import>
    <html>
      <type>TextArea</type>
      <rows>4</rows>
      <cols>60</cols>
    </html>
  </field>

  <field>
    <name>qr_code</name>
    <title>QR Code</title>
    <comment>QR code data</comment>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <export>true</export>
    <import>true</import>
    <html>
      <type>Text</type>
    </html>
  </field>
  <field>
    <name>barcode</name>
    <title>Bar Code</title>
    <comment>Bar code data</comment>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <export>true</export>
    <import>true</import>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>created_date</name>
    <title>Created Date</title>
    <default>CURRENT_TIMESTAMP</default>
    <type>timestamp</type>
    <comment>When card was created</comment>
    <import>true</import>
    <headerPattern>/created(.?date)?/i</headerPattern>
    <dataPattern>/^\d{4}-?\d{2}-?\d{2} ?(\d{2}:?\d{2}:?(\d{2})?)?$/</dataPattern>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
      <label>Created Date</label>
    </html>
  </field>
  <field>
    <name>modified_date</name>
    <title>Modified Date</title>
    <default>CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP</default>
    <comment>When card was modified</comment>
    <type>datetime</type>
    <import>true</import>
    <headerPattern>/modified(.?date)?/i</headerPattern>
    <dataPattern>/^\d{4}-?\d{2}-?\d{2} ?(\d{2}:?\d{2}:?(\d{2})?)?$/</dataPattern>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>

</table>
